<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/box"
    android:layout_margin="10dp"
    >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_released_patientPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_name_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_released_patientPic"
            app:layout_constraintBottom_toTopOf="@id/tv_lastname_patient"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_lastname_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_patient"
            app:layout_constraintBottom_toBottomOf="@id/iv_released_patientPic"
            app:layout_constraintStart_toEndOf="@id/iv_released_patientPic"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_released_patientPic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
